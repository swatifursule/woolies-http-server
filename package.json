{
  "name": "woolies-test-server",
  "description": "Simple API gateway.",
  "version": "0.0.1",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "private": true,
  "main": "lib/server.js",
  "scripts": {
    "start": "node lib/server.js",
    "localstart": "tsc-watch --onSuccess \"node lib/server.js\"",
    "build": "tsc",
    "clean": "rimraf lib/",
    "deploy": "npm run build && git push heroku master",
    "lint": "node scripts/lint",
    "test:unit": "node scripts/test",
    "test:integration": "node scripts/integration.test"
  },
  "prettier": {
    "semi": false,
    "arrowParens": "avoid",
    "useTabs": true,
    "singleQuote": true,
    "printWidth": 80,
    "parser": "typescript"
  },
  "dependencies": {
    "@types/compression": "0.0.36",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.0",
    "@types/lodash": "^4.14.149",
    "@types/node": "^10.12.12",
    "@types/request-promise": "^4.1.42",
    "@types/supertest": "^2.0.7",
    "@types/swagger-ui-express": "^4.0.2",
    "@types/yup": "^0.26.33",
    "axios": "^0.19.2",
    "compression": "^1.7.3",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.17.3",
    "lodash": "^4.17.15",
    "pm2": "^4.2.3",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "swagger-ui-express": "^4.0.2",
    "tsc-watch": "^1.0.31",
    "tslint": "^5.11.0",
    "typescript": "^3.2.2",
    "yup": "^0.28.3"
  },
  "devDependencies": {
    "that-build-library": "1.0.11",
    "@types/jest": "^23.3.10",
    "jest": "^25.1.0",
    "@typescript-eslint/eslint-plugin": "1.6.0",
    "@typescript-eslint/parser": "1.6.0",
    "eslint": "5.16.0",
    "eslint-config-prettier": "6.0.0",
    "eslint-plugin-prettier": "3.1.0",
    "supertest": "^3.4.2",
    "ts-jest": "^25.2.1"
  },
  "jest": {
    "verbose": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
